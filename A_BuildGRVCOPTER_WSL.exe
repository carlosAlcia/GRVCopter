#!/bin/bash

Verde='\033[32m'
NC='\033[39m'
for i in Libraries/*.cpp
do
    printf "${NC}Compiling: ${i}\n"
    arm-linux-gnueabihf-gcc -c -o ${i%.cpp}.o ${i%}
    printf "${Verde}Compiled ${i%}\n\n";
done

arm-linux-gnueabihf-g++-12 -o Grvcopter Grvcopter.cpp Libraries/*.o  -lpthread
scp Grvcopter pi@murphy.local:/home/pi/Grvcopter
printf "${Verde}End of build\n\n";



